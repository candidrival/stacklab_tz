<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/coolvetica_rg"
        android:text="@string/app_name"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_denied"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@id/title_app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/title_app_name"
        app:layout_constraintTop_toTopOf="@id/title_app_name"
        android:background="@drawable/bg_denied"
        android:src="@drawable/ic_denied"
        android:visibility="gone"
        android:padding="8dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_accept"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@id/title_app_name"
        app:layout_constraintStart_toEndOf="@id/title_app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_app_name"
        android:background="@drawable/bg_accept"
        android:src="@drawable/ic_accept"
        android:visibility="gone"
        android:padding="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_add"
        app:layout_constraintBottom_toBottomOf="@id/btn_add"
        app:layout_constraintStart_toEndOf="@id/btn_add"
        android:text="@string/add_task"
        android:background="@drawable/bg_add_task"
        android:textColor="@color/text_color_toolbar"
        android:fontFamily="@font/coolvetica_rg"
        android:layout_marginStart="-8dp"
        android:textSize="10sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_add"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="@id/title_app_name"
        app:layout_constraintStart_toEndOf="@id/title_app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_app_name"
        android:src="@drawable/ic_add"
        android:layout_marginEnd="12dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/text_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>